<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/best"
    tools:context=".MainActivity"
    android:id="@+id/overall">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"


        android:background="#FFEB3B"
        android:text="PLAY WITH FACTORS"
        android:textColor="#D81313"
        android:textColorHighlight="#00BCD4"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"

        android:fontFamily="casual"
        android:text="Enter A Number "
        android:textColor="#3F51B5"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="150dp"
        android:layout_height="58dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"

        android:ems="10"
        android:inputType="number"
        android:textColor="#9C27B0"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn"
        android:layout_centerHorizontal="true"


        android:fontFamily="casual"
        android:text="Choose A Factor of the Number "
        android:textColor="#3F51B5"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/editText1"
        android:layout_marginBottom="10dp"

        android:background="#6EB817"
        android:text="START"
        android:textColor="#100D0D"
        android:textSize="18sp"
         />

    <TextView
        android:id="@+id/t"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_above="@+id/t2"
        android:layout_alignRight="@+id/t2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"

        android:background="#59A6AF"
        android:shadowColor="#772323"
        android:text="OPTION 1 "
        android:textSize="24sp" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/t2"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:visibility="invisible"

        android:autoText="false"
        android:background="#59A6AF"
        android:text="OPTION 2"
        android:textSize="24sp"
         />

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/t3"
        android:layout_alignRight="@+id/t2"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/t2"
        android:visibility="invisible"

        android:background="#59A6AF"
        android:text="OPTION 3"
        android:textSize="24sp"
         />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"

        android:background="#F6E2E2"
        android:text="..."
        android:textColor="#E82727"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignTop="@+id/t2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:text="SCORE"
        android:textSize="18sp"
        android:textStyle="bold"
      />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"

        android:text="0"
        android:textSize="24sp"
        android:textStyle="bold"
         />

</RelativeLayout>